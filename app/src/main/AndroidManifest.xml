<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tarucjob2u">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.profile.EditCompanyActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/edit_company"></activity>
        <activity android:name=".ui.profile.EditUserActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/edit_user"/>
        <activity android:name=".ui.profile.UserProfileActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/title_profile"/>
        <activity
            android:name=".ui.home.CompanyActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/company"
            android:exported="true"/>
        <activity
            android:name=".ui.profile.RegisterCompanyActivity"
            android:label="@string/register_company" />
        <activity
            android:name=".ui.home.JobDetailActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/job"
            android:exported="true"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.profile.RegisterActivity"
            android:label="@string/title_register"></activity>
        <activity
            android:name=".ui.post_job.job_category"
            android:label="@string/post_job" />
        <activity
            android:name=".ui.post_job.EditJobActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".ui.profile.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>